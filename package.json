{
  "name": "nicoboard",
  "version": "0.1.0",
  "author": "aoirint",
  "private": true,
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "ts-standard",
    "format": "ts-standard --fix",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently --kill-others --success first \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -w\" \"wait-on http://localhost:3000 && tsc && electron .\"",
    "electron:build": "npm build && tsc -p electron && electron-builder"
  },
  "main": "build/electron/main.js",
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint-config-standard-with-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "src/*.d.ts"
  ],
  "ts-standard": {
    "ignore": [
      "src/*.d.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.20",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "ts-standard": "^11.0.0",
    "typescript": "<4.5.0",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.3"
  }
}
